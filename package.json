{
  "name": "rails-i18n-text-extractor",
  "displayName": "rails-i18n-text-extractor",
  "description": "Rails I18n Extractor is a VSCode extension designed to assist in the internationalization of Ruby on Rails projects.",
  "version": "0.0.5",
  "engines": {
    "vscode": "^1.87.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kb714/vscode-rails-i18n-text-extractor"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.extract",
        "title": "Extract"
      },
      {
        "command": "i18nInformation.refresh",
        "title": "Refresh",
        "icon": "$(sync)"
      }
    ],
    "configuration": {
      "title": "I18n Extractor",
      "properties": {
        "i18nExtractor.baseYmlFiles": {
          "type": "array",
          "default": [],
          "description": "List of files to search for common texts"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "extension.extract",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "i18nInformation.refresh",
          "group": "navigation",
          "when": "view == i18nInformationWebView"
        }
      ],
      "view/item/context": [
        {
          "command": "i18nInformation.refresh",
          "group": "inline",
          "when": "view == i18nInformationWebView"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "i18nInformationPanel",
          "title": "I18n Information",
          "icon": "$(globe)"
        }
      ]
    },
    "views": {
      "i18nInformationPanel": [
        {
          "type": "webview",
          "id": "i18nInformationWebView",
          "name": "I18n Information"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.34",
    "@types/sinon": "^17.0.3",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vscode/test-electron": "^2.3.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.26.0",
    "glob": "^7.1.4",
    "minimatch": "5.1.2",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "source-map-support": "^0.5.12",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.35",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "js-yaml": "^4.1.0",
    "yaml": "^2.4.0"
  }
}
